            "Condition": {
                "StringEquals": {
                    "kms:ViaService": "kinesis.ap-south-1.amazonaws.com"
                },
                "StringLike": {
                    "kms:EncryptionContext:aws:kinesis:arn": "arn:aws:kinesis:ap-south-1:909450668802:stream/%FIREHOSE_POLICY_TEMPLATE_PLACEHOLDER%"
                }
